#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h> 

int main() {
  int a=0, b=0, c=0;
  int value;
  scanf("%d %d %d", &a, &b, &c);

  if (a == b && b == c && a == c) {
  value = 10000 + a * 1000;
  }
  else if (a == b && a != c) {
  value = 1000 + a * 100;
  }
  else if (b == c && b != a) {
  value = 1000 + b * 100;
  }
  else if (c == a && c != b) {
  value = 1000 + c * 100;
  }
  else if (a > b && a > c) {
  value = a *100;
  }
  else if (b > a && b > c) {
  value = b * 100;
  }
  else if (c > a && c > b) {
  value = c * 100;
  }
  printf("%d", value);
}
